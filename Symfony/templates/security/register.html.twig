{% extends 'base_content.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body_content %}
    <div class="container">
        <div class="row">
            {% if error %}
                <div class="col-12">
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            {% endif %}
            
            <div class="col-sm-12">
                {{ form_start(registrationForm) }}
                    <h1 class="h3 mb-3 font-weight-normal pt-3">Регистрация</h1>

                    {{ form_row(registrationForm.email, {
                        label: 'Email',
                        attr: {placeholder: 'Ваш Email...'},
                    }) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password',
                        attr: {placeholder: 'Ваш Пароль...'},
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {
                        label: 'Согласен с условиями',
                    }) }}

                    <button class="btn btn-lg btn-primary btn-block mb-3" type="submit">Зарегистрироваться</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}