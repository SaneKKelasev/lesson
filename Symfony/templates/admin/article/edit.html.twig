{% extends 'base_content.html.twig' %}

{% block title %}Редактирование статьи{% endblock %}

{% block body_content %}
    {% if showError %}
        <div class="row text-center">
            <div class="col-12">
                <div class="alert alert-danger" role="alert">
                    Не удалось изменить статью
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="p-4 border rounded-lg mb-4 shadow-sm bg-white">

                    <h1>Редактирование статьи</h1>

                    {% include 'admin/article/form.html.twig' with {button_text : 'Изменить'} %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}